@model LoanCalModel // Model for the view
@{
    ViewBag.Title = "Loan Payment Calculator"; // Page title
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Home Page</title>
    <style>
        /* Reset styles */
        body, h1, label, input, button, a {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* Body styles */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f9;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        /* Box styles */
        .box {
            background-color: #fff;
            max-width: 600px;
            margin: 20px auto;
            padding: 2em;
            border-radius: 12px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            border: 1px solid #e1e1e1;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .box:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.2);
        }

        /* Heading styles */
        h1 {
            margin-bottom: 1.5em;
            color: #333;
            text-align: center;
            font-size: 2em;
            font-weight: bold;
        }

        /* Form styles */
        form {
            display: flex;
            flex-direction: column;
            width: 100%;
        }

        /* Label styles */
        label {
            font-weight: bold;
            margin-bottom: 0.5em;
            color: #333;
            font-size: 1.1em;
        }

        /* Input styles */
        input {
            padding: 0.75em;
            margin-bottom: 1.5em;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 1em;
            width: 100%;
            transition: border-color 0.3s ease;
        }

        input:focus {
            border-color: #007bff;
            outline: none;
        }

        /* Button styles */
        button {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 0.75em;
            cursor: pointer;
            border-radius: 4px;
            font-size: 1em;
            transition: background-color 0.3s ease;
        }

        button:hover {
            background-color: #0056b3;
        }

        /* Link styles */
        a {
            display: inline-block;
            margin-top: 1em;
            color: #007bff;
            text-decoration: none;
            font-size: 1em;
            text-align: center;
            transition: color 0.3s ease;
        }

        a:hover {
            color: #0056b3;
        }

        /* Read-only input styles */
        input[readonly] {
            background-color: #e9ecef;
            cursor: not-allowed;
        }

        /* Validation summary styles */
        .validation-summary-errors {
            color: red;
            margin-bottom: 1em;
        }

        }
    </style>
</head>
<body>
    <div class="box">
        <h1>Loan Calculator</h1> <!-- Calculator heading -->
        <form asp-action="Index" method="post">
            <!-- Post data to Index action -->
            <div asp-validation-summary="All"></div> <!-- Validation errors -->
            <div>
                <label asp-for="Principal">
                    <!-- Principal label -->
                    Principal:
                </label>
                <input asp-for="Principal" /> <!-- Principal input -->
            </div>
            <div>
                <label asp-for="YearlyInterestRate">
                    <!-- Interest rate label -->
                    Yearly Interest Rate:
                </label>
                <input asp-for="YearlyInterestRate" /> <!-- Interest rate input -->
            </div>
            <div>
                <label asp-for="NumberOfPaymentsPerYear">Number Of Payments Per Year:</label> <!-- Payments per year label -->
                <input asp-for="NumberOfPaymentsPerYear" /> <!-- Payments per year input -->
            </div>
            <div>
                <label>Payment Per Period:</label> <!-- Payment per period label -->
                <input value="@ViewBag.PaymentPerPeriod.ToString("C2")" readonly> <!-- Payment per period, read-only -->
            </div>
            <button type="submit">Calculate</button> <!-- Calculate button -->
            <a asp-action="Index">Clear</a> <!-- Clear form link -->
        </form>
    </div>
</body>
</html>
